<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Danh mục chi tiêu</h1>
  <%= link_to 'Thêm danh mục', new_category_path, class: 'bg-blue-500 text-white px-4 py-2 rounded mb-4 inline-block' %>
  <table class="min-w-full bg-white border">
    <thead>
      <tr>
        <th class="py-2 px-4 border">Tên danh mục</th>
        <th class="py-2 px-4 border">Hành động</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td class="py-2 px-4 border"><%= category.name %></td>
          <td class="py-2 px-4 border">
            <%= link_to 'Sửa', edit_category_path(category), class: 'bg-yellow-400 text-white px-2 py-1 rounded mr-2' %>
            <%= link_to 'Xóa', category_path(category), method: :delete, data: { confirm: 'Bạn có chắc muốn xóa?' }, class: 'bg-red-500 text-white px-2 py-1 rounded' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
