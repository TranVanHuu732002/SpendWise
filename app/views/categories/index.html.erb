<div class="min-vh-100 bg-light py-4">
  <div class="container bg-white shadow rounded p-4 my-4">
    <h1 class="display-5 fw-bold mb-4 text-center text-primary">Danh mục chi tiêu</h1>
    <div class="d-flex justify-content-end mb-3">
      <%= link_to 'Thêm danh mục', new_category_path, class: 'btn btn-primary' %>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead class="table-light">
          <tr>
            <th class="text-center">Tên danh mục</th>
            <th class="text-center">Hành động</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td class="text-center"><%= category.name %></td>
              <td class="text-center">
                <%= link_to 'Sửa', edit_category_path(category), class: 'btn btn-warning btn-sm me-1' %>
                <%= link_to 'Xóa', category_path(category), method: :delete, data: { confirm: 'Bạn có chắc muốn xóa?' }, class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
