<%= form_with(model: category, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :name, 'Tên danh mục', class: 'block font-semibold mb-2' %>
    <%= form.text_field :name, class: 'border rounded px-3 py-2 w-full focus:ring focus:ring-blue-200' %>
  </div>
  <div>
    <%= form.submit class: 'bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded w-full font-bold shadow transition' %>
  </div>
<% end %>
