<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center">Đăng nhập</h2>
    <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
      <div class="mb-4">
        <%= f.label :email, 'Email', class: 'block font-semibold mb-2' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border rounded px-3 py-2 w-full' %>
      </div>
      <div class="mb-4">
        <%= f.label :password, 'Mật khẩu', class: 'block font-semibold mb-2' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'border rounded px-3 py-2 w-full' %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: 'mr-2' %>
          <%= f.label :remember_me, 'Ghi nhớ đăng nhập', class: 'font-semibold' %>
        </div>
      <% end %>
      <div>
        <%= f.submit "Đăng nhập", class: 'bg-blue-500 text-white px-4 py-2 rounded w-full font-bold' %>
      </div>
    <% end %>
    <div class="mt-6 flex justify-between text-sm">
      <%= link_to "Đăng ký", new_registration_path(resource_name), class: "text-blue-500 hover:underline" %>
      <%= link_to "Quên mật khẩu?", new_password_path(resource_name), class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>
