<%= form_with(model: transaction, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :date, 'Ngày', class: 'form-label' %>
    <%= form.date_field :date, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :amount, 'Số tiền', class: 'form-label' %>
    <%= form.number_field :amount, step: 1000, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :category_id, 'Danh mục', class: 'form-label' %>
    <%= form.collection_select :category_id, categories, :id, :name, { prompt: 'Chọn danh mục' }, { class: 'form-select' } %>
  </div>
  <div class="mb-3">
    <%= form.label :description, 'Mô tả', class: 'form-label' %>
    <%= form.text_field :description, class: 'form-control' %>
  </div>
  <div>
    <%= form.submit class: 'btn btn-success w-100' %>
  </div>
<% end %>
