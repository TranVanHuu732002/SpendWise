<div class="min-vh-100 bg-light py-4">
  <div class="container bg-white shadow rounded p-4 my-4">
    <h1 class="display-5 fw-bold mb-4 text-center text-primary">Giao dịch chi tiêu</h1>
    <div class="d-flex justify-content-end mb-3">
      <%= link_to 'Thêm giao dịch', new_transaction_path, class: 'btn btn-primary' %>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead class="table-light">
          <tr>
            <th class="text-center">Ngày</th>
            <th class="text-center">Số tiền</th>
            <th class="text-center">Danh mục</th>
            <th class="text-center">Mô tả</th>
            <th class="text-center">Hành động</th>
          </tr>
        </thead>
        <tbody>
          <% @transactions.each do |transaction| %>
            <tr>
              <td class="text-center"><%= transaction.date %></td>
              <td class="text-end text-success fw-bold"><%= number_to_currency(transaction.amount, unit: "₫", precision: 0) %></td>
              <td class="text-center"><%= transaction.category&.name %></td>
              <td><%= transaction.description %></td>
              <td class="text-center">
                <%= link_to 'Sửa', edit_transaction_path(transaction), class: 'btn btn-warning btn-sm me-1' %>
                <%= link_to 'Xóa', transaction_path(transaction), method: :delete, data: { confirm: 'Bạn có chắc muốn xóa?' }, class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
