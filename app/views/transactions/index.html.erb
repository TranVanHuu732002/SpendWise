<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Giao dịch chi tiêu</h1>
  <%= link_to 'Thêm giao dịch', new_transaction_path, class: 'bg-blue-500 text-white px-4 py-2 rounded mb-4 inline-block' %>
  <table class="min-w-full bg-white border">
    <thead>
      <tr>
        <th class="py-2 px-4 border">Ngày</th>
        <th class="py-2 px-4 border">Số tiền</th>
        <th class="py-2 px-4 border">Danh mục</th>
        <th class="py-2 px-4 border">Mô tả</th>
        <th class="py-2 px-4 border">Hành động</th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |transaction| %>
        <tr>
          <td class="py-2 px-4 border"><%= transaction.date %></td>
          <td class="py-2 px-4 border"><%= number_to_currency(transaction.amount, unit: "₫", precision: 0) %></td>
          <td class="py-2 px-4 border"><%= transaction.category&.name %></td>
          <td class="py-2 px-4 border"><%= transaction.description %></td>
          <td class="py-2 px-4 border">
            <%= link_to 'Sửa', edit_transaction_path(transaction), class: 'bg-yellow-400 text-white px-2 py-1 rounded mr-2' %>
            <%= link_to 'Xóa', transaction_path(transaction), method: :delete, data: { confirm: 'Bạn có chắc muốn xóa?' }, class: 'bg-red-500 text-white px-2 py-1 rounded' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
